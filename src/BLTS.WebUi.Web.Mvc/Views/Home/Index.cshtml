@using BLTS.WebUi.Web.Startup
@{ ViewBag.CurrentPageName = "Home";
        ViewBag.Title = "Home Page"; }
@section scripts
{
  <environment names="Development">
    <script src="~/libs/chartjs/dist/Chart.js" asp-append-version="true"></script>
    <script src="~/view-resources/Views/Home/Index.js" asp-append-version="true"></script>
  </environment>

  <environment names="Staging,Production">
    <script src="~/view-resources/Views/_Bundles/home-index.min.js" asp-append-version="true"></script>
  </environment>
}
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12">
        <h1 class="m-0 text-dark">@L("HomePage")</h1>
      </div>
    </div>
  </div>
</div>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h3>Welcome to Better Living Through Science</h3>

            <p>
              Dedicated to helping humanity through scientific research and education
            </p>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
