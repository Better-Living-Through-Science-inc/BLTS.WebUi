@using BLTS.WebUi.Web.Startup
@{ ViewBag.CurrentPageName = "Contact";
  ViewBag.Title = "Contact Us"; }
<div class="content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="m-0 text-dark">@ViewBag.Title</h1>
      </div>
    </div>
  </div>
</div>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header border-transparent">
            <h2 class="card-title">BLTS USA</h2>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <p>
              Email:<br />
              Phone:<br />
              Address:<br />
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-header border-transparent">
            <h2 class="card-title">BLTS Thailand (Registration Pending)</h2>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <p>
              Email:<br />
              Phone:<br />
              Address:<br />
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
