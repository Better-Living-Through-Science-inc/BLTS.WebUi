@page "/"
@namespace BLTS.WebUi.Web.Pages
@using BLTS.WebUi.Web.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
    string pageTitle = "Better Living Through Science";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle</title>
    <base href="~/" />
    <component type="typeof(Styles)" render-mode="Static" />
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <component type="typeof(Header)" render-mode="ServerPrerendered" />
        <component type="typeof(NavMenu)" render-mode="ServerPrerendered" />
        <div class="content-wrapper">
            <component type="typeof(App)" render-mode="ServerPrerendered" />
        </div>
        <component type="typeof(Footer)" render-mode="ServerPrerendered" />
    </div>
    <script src="_framework/blazor.server.js"></script>
    <script src="bundles/site.min.js"></script>
    <script src="bundles/bootstrap.min.js"></script>
    <script>
        window.setTitle = (title) => {
            document.title = title;
        }
    </script>
</body>
</html>