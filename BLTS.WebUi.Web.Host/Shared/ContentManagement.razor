@namespace BLTS.WebUi.Web.Shared
@code {
    public string Title = "Future CMS";
}
<PageTitle Title=@Title />

<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">Don't Panic</h1>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header border-transparent">
                        <h2 class="card-title">Future CMS</h2>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <p>
                            Stay calm and carry on. This page is reserved for future use in the CMS.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

