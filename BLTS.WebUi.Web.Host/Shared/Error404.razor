@code {
  public string Title = "Resource Not Found";
}
<PageTitle Title=@Title />

<div class="content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="m-0 text-dark">Don't Panic</h1>
      </div>
    </div>
  </div>
</div>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header border-transparent">
            <h2 class="card-title">Seems we encountered a little glitch...</h2>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
              </button>
            </div>
          </div>
          <div class="card-body">
            <p>
               Stay calm and carry on. This error has been logged.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

